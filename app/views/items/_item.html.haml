.row
  .col-md-7
    = image_tag "items/#{item.icon}.gif"
    - if item.is_a? FolderItem
      = link_to item.name, item_path(item)
    - else
      = link_to item.name, '#item_preview', 'data-remote' => item_path(item, remote: true), 'data-toggle' => 'modal'

  .col-md-2
    - unless item.is_a? FolderItem
      = number_to_human_size(item.file_size)
  .col-md-2
    = l(item.updated_at, format: :short)

  .col-md-1
    = button_to 'Delete', item_path(item), method: :delete, data: { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
